<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :venue_id, "Venue to review" %><br>
    <%= f.collection_select :venue_id, Venue.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </div>

  <div class="field">
    <%= f.label :review %><br>
    <%= f.text_area :review %>
  </div>

  <div class="field">
    <%= f.label :rating %><br>
    <%= f.number_field :rating %>
  </div>

  <div class="actions">
    <%= f.submit class: "button expand" %>
  </div>

  <div class="field">
    <%= f.label :post_image %><br />
    <%= f.file_field :post_image %>
  </div>

  
  
<% end %>
