<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :image, "Upload an image" %><br>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :remote_image_url, "Or add an image from the web" %><br>
    <%= f.text_field :remote_image_url %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :venue_id %><br>
    <%= f.collection_select :venue_id, Venue.all, :id, :name %>
  </div>
  
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </div>

  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.number_field :start_time %>
  </div>

  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.number_field :end_time %>
  </div>
  <div class="actions">
    <%= f.submit class: "button expand" %>
  </div>
<% end %>
